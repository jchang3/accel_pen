#include <vector>
#include <utility>
#include <cmath>
#include "dtw.h"
#include <iostream>
#include <fstream>

#define INFINITY 10000000

namespace DTW {

	//euclidean distance
    int dist(int x, int y) {
        return sqrt(pow((x - y), 2));
    }

    //returns minimum of three numbers
    int minimum(int x, int y, int z){
    	return x < y ? (x < z ? x : z) : (y < z ? y : z);
    }

    void print_matrix(int *cost[], int n, int m){
    	        std::ofstream myfile;
    	        myfile.open ("example.txt");
    	        for(int i = 0; i < m; i++){
    	                	for(int j = 0; j < n; j++){
    	                		myfile << cost[i][j] << ", ";
    	                	}
    	                	myfile << std::endl;
    	                }
    	        myfile.close();
    }

    //dynamic programming approach
    int dtw(const std::vector<int>& t1, const std::vector<int>& t2) {

        int m = t1.size();
        int n = t2.size();
        int window = static_cast<int>(0.1*(std::max(m,n))+0.5);
        int constraint = std::abs(n-m);
        window = std::max(window, constraint );

        // create cost matrix
        int cost[m][n];

        //cost[0][0] = dist(t1[0], t2[0]);

        // calculate first row
        for(int i = 0; i < m; i++)
        	for(int j = 0; j < n; j++)
            //cost[i][0] = cost[i-1][0] + dist(t1[i], t2[0]);
        		cost[i][j] = INFINITY;
        // calculate first column
//        for(int j = 1; j < n; j++)
//            //cost[0][j] = cost[0][j-1] + dist(t1[0], t2[j]);
//        	cost[0][j] = INFINITY;
        cost[0][0] = 0;

        // fill matrix
        for(int i = 1; i < m; i++)
            for(int j = std::max(1, i-window); j < std::min(n,i+window); j++)
                cost[i][j] = minimum(cost[i-1][j], cost[i][j-1], cost[i-1][j-1])
                    + dist(t1[i],t2[j]);

        print_matrix(cost, m, n);
//        std::ofstream myfile;
//        myfile.open ("example.txt");
//        for(int i = 0; i < m; i++){
//                	for(int j = 0; j < n; j++){
//                		myfile << cost[i][j] << ", ";
//                	}
//                	myfile << std::endl;
//                }
//        myfile.close();


        //std::cout << std::endl;
        //std::cout << cost[0][0] << std::endl;
        return cost[m-1][n-1];
    }
}
